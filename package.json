{
  "name": "gerritalex.de",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build": "next build && npm run build:rss && npm run build:sitemap",
    "build:rss": "node ./.next/serverless/scripts/build-rss.js",
    "build:sitemap": "node ./scripts/generate-sitemap.js",
    "dev": "next dev",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "lint:code": "eslint src",
    "lint:code:fix": "eslint src --fix && prettier --write src",
    "lint:types": "tsc --noEmit",
    "postinstall": "yarn-deduplicate -l",
    "start": "next start",
    "test": "exit 0"
  },
  "dependencies": {
    "@mdx-js/react": "1.6.21",
    "next": "10.0.1",
    "next-images": "1.6.2",
    "next-offline": "5.0.3",
    "preact": "10.5.5",
    "preact-render-to-string": "5.1.11",
    "react-query": "2.26.2",
    "preact-ssr-prepass": "1.1.2",
    "tinytime": "0.2.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@next/bundle-analyzer": "10.0.1",
    "@mapbox/rehype-prism": "0.5.0",
    "@mdx-js/loader": "1.6.21",
    "@mdx-js/mdx": "1.6.21",
    "@tailwindcss/typography": "0.2.0",
    "@tailwindcss/ui": "0.7.2",
    "@types/mdx-js__react": "1.5.3",
    "@types/node": "14.14.7",
    "@types/react": "16.9.56",
    "@types/react-query": "^1.1.2",
    "@types/webpack-env": "1.15.3",
    "cross-env": "7.0.2",
    "eslint": "7.13.0",
    "eslint-config-galex": "2.7.0",
    "globby": "11.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "next-compose-plugins": "2.2.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.1.2",
    "react-refresh": "0.9.0",
    "rss": "1.2.2",
    "simple-functional-loader": "1.2.1",
    "tailwindcss": "1.9.6",
    "tailwindcss-typography": "3.1.0",
    "typescript": "4.0.5",
    "unist-util-visit": "2.0.3",
    "xml-formatter": "2.4.0",
    "yarn-deduplicate": "3.1.0",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.jsx": "eslint --fix"
  }
}
