{
  "name": "gerrit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint components && eslint pages",
    "lint:fix": "eslint components --fix && eslint pages --fix && prettier --write pages && prettier --write components",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn"
  },
  "dependencies": {
    "@prefresh/next": "1.1.0",
    "dom-parser": "0.1.6",
    "i18next": "19.7.0",
    "i18next-browser-languagedetector": "6.0.1",
    "next": "9.5.3",
    "node-sass": "4.14.1",
    "preact": "10.4.8",
    "preact-render-to-string": "5.1.10",
    "react": "github:preact-compat/react#1.0.0",
    "react-debounce-input": "3.2.2",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-i18next": "11.7.2",
    "react-icons": "3.11.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "babel-eslint": "10.1.0",
    "eslint": "7.8.1",
    "eslint-config-galex": "1.0.5",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "typescript": "4.0.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.jsx": "eslint --fix"
  }
}
